{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "types": ["vite/client"],
    "paths": {
        "~/*": ["./src/*"],
        "@clover-platform": ["./.api/clover-platform"]
    }
  },
  "include": ["src"],
}