{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "CLOVER_API_KEY",
        "CLOVER_BASE_URL",
        "CLOVER_MERCHANT_ID",
        "REMOTE_DROPLET_PASS"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
