{  
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "SolidStart",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsxImportSource": "solid-js",
        "jsx": "preserve",
        "types": ["vite/client"],
        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
